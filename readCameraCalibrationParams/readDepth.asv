% Depth image is uint16
% Every incease in value is 1mm in real world

imgs = ["./imgs/00000_DepthMap16bit.png"]

img = imread( imgs(1) );

m = mean(mean(img(img>0))) % Mean value
tl = img(1,1) 		       % Top left pixel
